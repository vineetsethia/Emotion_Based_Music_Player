<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vineet.emotionmusicplayer.RecognitionResultActivity"
    android:background="@drawable/backimage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="75px"
            android:id="@+id/emotionLogo">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/happybig"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:id="@+id/emotionHappy"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sadbig"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/emotionSad"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/neutralbig"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/emotionNeutral"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fearbig"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/emotionFear"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/disgustbig"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/emotionDisgust"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/angerbig"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/emotionAnger"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/surprisebig"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/emotionSurprise"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/contemptbig"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/emotionContempt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy"
                android:textSize="30dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingBottom="25px"
                android:paddingTop="30px"
                android:paddingRight="10px"
                android:paddingLeft="10px"
                android:layout_gravity="center"

                android:textStyle="bold"
                android:id="@+id/emotionHappyText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sad"
                android:textSize="30dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="30px"
                android:paddingBottom="25px"
                android:paddingRight="10px"
                android:paddingLeft="10px"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:id="@+id/emotionSadText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fear"
                android:textSize="30dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingBottom="25px"
                android:paddingTop="30px"
                android:paddingRight="10px"
                android:layout_gravity="center"
                android:paddingLeft="10px"

                android:textStyle="bold"
                android:id="@+id/emotionFearText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="disgust"
                android:textSize="30dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="30px"
                android:paddingBottom="25px"
                android:paddingRight="10px"
                android:paddingLeft="10px"
                android:layout_gravity="center"

                android:textStyle="bold"
                android:id="@+id/emotionDisgustText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contempt"
                android:textSize="30dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="30px"
                android:paddingBottom="25px"
                android:paddingRight="10px"
                android:paddingLeft="10px"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:id="@+id/emotionContemptText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anger"
                android:visibility="gone"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="30px"
                android:paddingBottom="25px"
                android:paddingRight="10px"
                android:paddingLeft="10px"
                android:layout_gravity="center"

                android:textStyle="bold"
                android:id="@+id/emotionAngerText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surprise"
                android:textSize="30dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="30px"
                android:paddingBottom="25px"
                android:paddingRight="10px"
                android:paddingLeft="10px"
                android:layout_gravity="center"

                android:textStyle="bold"
                android:id="@+id/emotionSurpriseText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neutral"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="30px"
                android:visibility="gone"
                android:paddingBottom="25px"
                android:paddingRight="10px"
                android:paddingLeft="10px"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:id="@+id/emotionNeutralText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/emotionLogo">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Try Again"
                android:textSize="20dp"
                android:id="@+id/button_check_again"
                android:onClick="recheckRecognition"
                android:textStyle="bold"
                android:paddingBottom="20px"
                style="@style/ButtonStyle"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="looksGood"
                android:layout_marginTop="20px"
                android:text="Looks Good"
                android:textSize="20dp"
                android:id="@+id/button_looks_good"
                android:textStyle="bold"
                style="@style/ButtonStyle"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
